</TMPL_IF>
<TMPL_IF FORUMNAME>
	<TMPL_IF MOBILE>
		<form method="post" action="<TMPL_VAR URL>">
	<TMPL_ELSE>
		<form method="post" action="<TMPL_VAR URL>" enctype="multipart/form-data">
	</TMPL_IF>
	<input type="hidden" name="topicid" value="<TMPL_VAR TOPICID>" />
